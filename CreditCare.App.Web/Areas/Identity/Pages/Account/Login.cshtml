@page
@model LoginModel
@{
    ViewData["Title"] = "Sign In";
}

<!-- Left side - Login Form -->
<div class="auth-form">
    <div class="text-center mb-4">
        <svg class="mx-auto mb-3" width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20 4H4c-1.11 0-1.99.89-1.99 2L2 18c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V6c0-1.11-.89-2-2-2zm0 14H4v-6h16v6zm0-10H4V6h16v2z" />
        </svg>
        <h2 class="h3 mb-2">Sign in To Credit Care</h2>
    </div>

    <form id="account" method="post" class="mt-4">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="Input.Email" class="form-label h3">Email</label>
            <div class="input-group" style="opacity:50%; border-radius: 50%;">
                <span class="input-group-text bg-transparent border-end-0">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm-.4 4.25l-7.07 4.42c-.32.2-.74.2-1.06 0L4.4 8.25c-.25-.16-.4-.43-.4-.72 0-.67.73-1.07 1.3-.72L12 11l6.7-4.19c.57-.35 1.3.05 1.3.72 0 .29-.15.56-.4.72z" />
                    </svg>
                </span>
                <input asp-for="Input.Email" class="form-control border-start-0 ps-0"
                       placeholder="name@example.com" autocomplete="username" aria-required="true" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Input.Password" class="form-label h3">Password</label>
            <div class="input-group">
                <span class="input-group-text bg-transparent border-end-0">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z" />
                    </svg>
                </span>
                <input asp-for="Input.Password" class="form-control border-start-0 ps-0"
                       placeholder="Enter your password" autocomplete="current-password" aria-required="true" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="form-check">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label text-white-50">
                    Remember me
                </label>
            </div>
            <a id="forgot-password" href="./ForgotPassword" class="text-white-50 text-decoration-none hover-white">
                Forgot password?
            </a>
        </div>

        <button id="login-submit" type="submit" class="btn btn-primary w-100 mb-3 py-2">
            Sign In
        </button>

        <div class="text-center">
            <p class="text-white-50 mb-0">
                Don't have an account?
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-white text-decoration-none">
                    Create one
                </a>
            </p>
        </div>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="mt-4">
                <div class="position-relative mb-4">
                    <hr class="text-white-50" />
                    <span class="position-absolute top-50 start-50 translate-middle px-3 bg-transparent text-white-50">
                        or continue with
                    </span>
                </div>

                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="d-grid gap-2">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-light" name="provider" value="@provider.Name">
                                <i class="bi bi-@(provider.Name.ToLower())"></i>
                                @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            </div>
        }
    </form>
</div>

<!-- Right side - Content -->
<div class="content-section">
    <h1 class="display-4 fw-bold mb-4">Streamline Your Loan Management</h1>
    <p class="lead mb-4">
        Experience the next generation of credit management with our comprehensive platform
        designed for modern financial institutions.
    </p>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="feature-card">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor" class="mb-3">
                    <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V5h14v14z" />
                    <path d="M7 12h2v5H7zm4-7h2v12h-2zm4 4h2v8h-2z" />
                </svg>
                <h3 class="h5 mb-2">Rpayments</h3>
                <p class="mb-0 text-white-50">Streamline Loan repayments </p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="feature-card">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor" class="mb-3">
                    <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 10.99h7c-.53 4.12-3.28 7.79-7 8.94V12H5V6.3l7-3.11v8.8z" />
                </svg>
                <h3 class="h5 mb-2">Enterprise Security</h3>
                <p class="mb-0 text-white-50">Bank-grade protection for all your sensitive data</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .hover-white:hover {
            color: white !important;
        }

        .input-group-text {
            color: rgba(255, 255, 255, 0.6);
        }

        .form-check-input {
            background-color: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.3);
        }

            .form-check-input:checked {
                background-color: white;
                border-color: white;
            }
    </style>
}